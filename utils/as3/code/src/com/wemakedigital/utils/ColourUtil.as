package com.wemakedigital.utils {	import flash.display.DisplayObject;	import flash.geom.ColorTransform;			public class ColourUtil 	{		public static function transform ( object : DisplayObject , colour : Number , alpha : Number = 1 ) : void		{			var transform : ColorTransform = new ColorTransform( ) ;			transform.color = colour;			transform.alphaMultiplier = alpha ;			object.transform.colorTransform = transform ;		}		public static function removeTransform ( object : DisplayObject ) : void		{			var transform : ColorTransform = new ColorTransform( ) ;			object.transform.colorTransform = transform ;		}	}}
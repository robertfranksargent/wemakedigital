package com.wemakedigital.parallax.scenes {	import com.wemakedigital.parallax.objects.ParallaxCarouselObject;	import com.wemakedigital.utils.MathUtil;		public class ParallaxCarouselScene extends ParallaxScene	{		protected var _radiusX : Number ;		protected var _radiusZ : Number ;				private var _angle : Number ;				public function ParallaxCarouselScene ( radiusX : Number , radiusZ : Number )		{			this.angle = 0 ;			this.radiusX = radiusX ;			this.radiusZ = radiusZ ;		}		public function set radiusX ( value : Number ) : void		{			this._radiusX = value ;			this.updateChildren( ) ;		}				public function get radiusX ( ) : Number		{			return this._radiusX ;		}		public function set radiusZ ( value : Number ) : void		{			this._radiusZ = value ;			this.updateChildren( ) ;		}				public function get radiusZ ( ) : Number		{			return this._radiusZ ;		}		public function set angle ( value : Number ) : void		{			this._angle = value ;			this.updateChildren( ) ;		}				public function get angle ( ) : Number		{			return this._angle ;		}				protected function updateChildren ( ) : void		{			for each ( var child : ParallaxCarouselObject in this.children )			{				child.x = this.x + Math.sin( MathUtil.toRadians( this.angle + child.angle ) ) * this.radiusX ;				child.z = this.z + Math.cos( MathUtil.toRadians( this.angle + child.angle ) ) * this.radiusZ ;			}		}	}}
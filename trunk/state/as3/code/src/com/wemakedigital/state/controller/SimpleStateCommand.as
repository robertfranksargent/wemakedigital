package com.wemakedigital.state.controller {	import com.wemakedigital.state.model.StateProxy;	import org.puremvc.as3.multicore.patterns.command.SimpleCommand;		/**	 * Base class for simple commands that use the state proxy.	 */	public class SimpleStateCommand extends SimpleCommand 	{		//----------------------------------------------------------------------		//		//  Getters and Setters		//		//----------------------------------------------------------------------				/**		 * State proxy getter.		 * 		 * @return The registered state proxy.		 */		public function get stateProxy () : StateProxy		{			return this.facade.retrieveProxy( StateProxy.NAME ) as StateProxy;		}	}}